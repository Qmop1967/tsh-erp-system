# TSH NeuroLink - Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8002
WORKERS=4

# =============================================================================
# DATABASE CONFIGURATION (TSH ERP PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://khaleel:khaleel@localhost:5432/tsh_erp
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# REDIS CONFIGURATION (Event Bus)
# =============================================================================
REDIS_URL=redis://localhost:6379/2
REDIS_CHANNEL_PREFIX=neurolink:

# =============================================================================
# AUTHENTICATION (TSH ERP JWT)
# =============================================================================
JWT_SECRET_KEY=your-secret-key-change-in-production-must-match-tsh-erp
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# =============================================================================
# TSH ERP API INTEGRATION
# =============================================================================
TSH_ERP_API_URL=https://api.tsh.sale/erp
TSH_ERP_API_KEY=

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# =============================================================================
# EVENT PROCESSING
# =============================================================================
EVENT_BATCH_SIZE=100
EVENT_POLL_INTERVAL_MS=1000
EVENT_RETRY_MAX_ATTEMPTS=3
EVENT_RETENTION_DAYS=90

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
NOTIFICATION_BATCH_SIZE=50
NOTIFICATION_RATE_LIMIT_PER_USER_HOUR=100

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=notifications@tsh.sale

# =============================================================================
# SMS CONFIGURATION
# =============================================================================
SMS_ENABLED=false
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=
SMS_AUTH_TOKEN=
SMS_FROM_NUMBER=

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=true
ENABLE_QUERY_LOGGING=false
SLOW_QUERY_THRESHOLD_MS=1000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=["http://localhost:3000","https://erp.tsh.sale","https://shop.tsh.sale"]

# =============================================================================
# RULE ENGINE
# =============================================================================
RULE_ENGINE_ENABLED=true
RULE_EVALUATION_TIMEOUT_SECONDS=5
