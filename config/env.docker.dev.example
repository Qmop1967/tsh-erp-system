# ============================================================================
# TSH ERP - Docker Development Environment Template
# Copy this file to `.env.dev` in the repository root and adjust values.
# This template reuses the standard config/env.example defaults and adds
# Docker-specific overrides needed for containerised development.
# ============================================================================

# Core database settings (Docker network)
POSTGRES_DB=tsh_erp
POSTGRES_USER=tsh_admin
POSTGRES_PASSWORD=changeme
POSTGRES_PORT=5432
DATABASE_URL=postgresql://tsh_admin:changeme@tsh_postgres:5432/tsh_erp

# FastAPI application
SECRET_KEY=change-this-secret-key-change-this-secret-key
ENVIRONMENT=development
DEBUG=true
UVICORN_WORKERS=1
APP_PORT=8000

# Redis cache (optional but recommended)
REDIS_URL=redis://tsh_redis:6379/0
REDIS_PORT=6379

# pgAdmin (local development tooling)
PGADMIN_DEFAULT_EMAIL=admin@local.test
PGADMIN_DEFAULT_PASSWORD=changeme
PGADMIN_PORT=5050

# Nginx (only when running with --profile proxy)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

