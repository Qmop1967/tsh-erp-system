# Database
PRSS_DB_URL=postgresql+psycopg://prss_user:prss_pass@localhost:5432/prss_db

# JWT Configuration
PRSS_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
PRSS_JWT_ALGORITHM=HS256
PRSS_JWT_EXPIRE_MINUTES=30

# Integration APIs
INVENTORY_API_BASE=http://localhost:8000/api/inventory
SALES_API_BASE=http://localhost:8000/api/sales
ACCOUNTING_API_BASE=http://localhost:8000/api/accounting

# Integration Auth Tokens
INVENTORY_API_TOKEN=inventory-service-token
SALES_API_TOKEN=sales-service-token
ACCOUNTING_API_TOKEN=accounting-service-token

# Feature Flags
INSTANT_REFUND_THRESHOLD=1500
ENABLE_AUTO_RESTOCK=true
ENABLE_AI_INSPECTION=false

# Application Settings
APP_NAME=TSH After-Sales Operations System
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8001"]

# File Upload
MAX_PHOTO_SIZE=5242880
ALLOWED_PHOTO_TYPES=["image/jpeg","image/png","image/webp"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Observability
ENABLE_REQUEST_ID=true
ENABLE_TRACING=true
