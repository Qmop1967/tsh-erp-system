{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - temporarily relaxed for cleanup */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "src/App_*.tsx",
    "src/main_*.tsx",
    "src/pages/dashboard/AdminDashboard.tsx",
    "src/pages/dashboard/DashboardPage.tsx",
    "src/pages/ai/AIAssistantDashboard.tsx",
    "src/components/DebugLogin.tsx",
    "src/components/EnhancedERPDashboard.tsx",
    "src/components/pos/EnhancedPaymentModal.tsx",
    "src/components/layout/DemoLayout.tsx",
    "src/components/inventory/InventorySidebar.tsx",
    "src/pages/returns/ReturnsManagement.tsx",
    "src/pages/sales/CustomersPage.tsx",
    "src/pages/settings/DynamicTranslationManagementPage.tsx",
    "src/pages/hr/EmployeesPage.tsx",
    "src/pages/permissions/PermissionsPage.tsx",
    "src/pages/inventory/InventoryAdjustmentPage.tsx",
    "src/pages/inventory/PackageManagementPage.tsx",
    "src/pages/money-transfer/MoneyTransferDashboard.tsx",
    "src/pages/pos/POSInterface.tsx",
    "src/pages/pricing/MultiPriceSystem.tsx",
    "src/pages/gps/GPSTracking.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
